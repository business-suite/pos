<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="NumpadWidget" owl="1">
        <div class="numpad">
            <div class="numpad1" style="width:75%;float:left">
            <button class="input-button number-char border-left" t-on-click="sendInput('1')">1</button>
            <button class="input-button number-char" t-on-click="sendInput('2')">2</button>
            <button class="input-button number-char" t-on-click="sendInput('3')">3</button>
<!--            <button class="mode-button" style="border-bottom: none;font-size: 17px;">E</button>-->
            <br/>
            <button class="input-button number-char border-left" t-on-click="sendInput('4')">4</button>
            <button class="input-button number-char" t-on-click="sendInput('5')">5</button>
            <button class="input-button number-char" t-on-click="sendInput('6')">6</button>
<!--            <button class="mode-button" style="border-bottom: none;font-size: 17px;">N</button>-->
            <br/>
            <button class="input-button number-char border-left" t-on-click="sendInput('7')">7</button>
            <button class="input-button number-char" t-on-click="sendInput('8')">8</button>
            <button class="input-button number-char" t-on-click="sendInput('9')">9</button>
<!--            <button class="mode-button" style="border-bottom: none;font-size: 17px;">T</button>-->
            <br/>
            <button class="input-button border-left" t-att-class="{ 'disabled-mode': props.disableSign }"
                    t-on-click="sendInput('-')">C</button>
            <button class="input-button number-char" t-on-click="sendInput('0')">0</button>
            <!--            <button class="input-button number-char" t-on-click="sendInput(decimalSeparator)">-->
            <!--                <t t-esc="decimalSeparator" />-->
            <!--            </button>-->
            <button class="mode-button numpad-backspace" t-on-click="sendInput('Backspace')">
                <img style="pointer-events: none;" src="/pos/static/src/img/backspace.png"
                     width="24" height="21" alt="Backspace"/>
            </button>
<!--            <button class="mode-button" style="font-size: 17px;">E</button>-->

                </div>
            <div class="numpad2" style="width:25%;float:left">
                    <span>ENTER</span>
            </div>
            <div style="clear:both">
<!--                <input t-ref="search-word-input" autofocus="autofocus" type="text" placeholder="Search Products..." t-on-keyup="updateSearch" />-->
                <button style="width:25%;font-size: 20px;border-left: 1px solid #bfbfbf">Keypad</button>
                <button style="width:75%;font-size: 20px;">Payment</button>
        </div>
        </div>

    </t>

</templates>
