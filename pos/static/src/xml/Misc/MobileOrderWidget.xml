<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="MobileOrderWidget" owl="1">
        <div class="switchpane">
            <button class="btn-switchpane first" t-on-click="trigger('click-pay')">
                <span class="first-span">Order </span>
                <span class="second-span">(<t t-esc="total" />)</span>
            </button>
            <button class="btn-switchpane secondary" t-on-click="trigger('switchpane')">
                <span class="first-span">Pay </span>
                <span class="second-span">(<t t-esc="items_number"/> items)</span>
            </button>
        </div>
    </t>

</templates>
